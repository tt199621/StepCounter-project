<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#23263B"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#272A43">
        <include layout="@layout/title_style" />

        <android.support.design.widget.TabLayout
            android:id="@+id/information_tablayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tabPadding="10dp"
            app:tabSelectedTextColor="#FBE301"
            app:tabTextColor="#ffffff"
            app:tabMinWidth="100dp"
            android:layout_gravity="center"
            app:tabGravity="center"

            app:tabIndicatorColor="#FBE301"
            app:tabBackground="@color/dblue"
            ></android.support.design.widget.TabLayout>
        <!--app:tabIndicatorFullWidth="false"-->
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/information_recyclerview"
        android:padding="10dp"
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>



</LinearLayout>