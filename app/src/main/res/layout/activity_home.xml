<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#272A43"
    tools:context=".main.HomeActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/main_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_lin">

    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:id="@+id/bottom_lin"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/lin_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/home_home"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/selector_fg_home"
                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_gravity="center_horizontal"
                android:text="首页"
                android:textColor="#fff"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/home_deal"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/selector_fg_deal"
                android:layout_gravity="center_horizontal"
                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_gravity="center_horizontal"
                android:text="交易"
                android:textColor="#fff"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/home_shop"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/selector_fg_shop"
                android:layout_gravity="center_horizontal"
                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_gravity="center_horizontal"
                android:text="商圈"
                android:textColor="#fff"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/home_unite"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/selector_fg_unite"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_gravity="center_horizontal"
                android:text="赛事"
                android:textColor="#fff"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/lin_5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/home_my"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/selector_fg_my"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_gravity="center_horizontal"
                android:text="我的"
                android:textColor="#fff"/>
        </LinearLayout>

    </LinearLayout>



</RelativeLayout>