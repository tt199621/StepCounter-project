<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    tools:context=".chat.StartDealActivity">


    <include layout="@layout/title_style"
        android:id="@+id/tttttt"/>

    <LinearLayout
        android:layout_below="@+id/tttttt"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorPrimary"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易数量"
                android:layout_centerVertical="true"
                android:textColor="#fff"/>
            <EditText
                android:id="@+id/start_deal_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="请输入买入人参果数量"
                android:textColorHint="#999999"
                android:inputType="number"
                android:gravity="right"
                android:maxLength="6"
                android:textSize="14sp"
                android:background="@color/colorPrimary"
                android:textColor="#fff"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易金额"
                android:layout_centerVertical="true"
                android:textColor="#fff"/>
            <TextView
                android:id="@+id/start_deal_moeny"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自动计算"
                android:textSize="14sp"
                android:background="@color/colorPrimary"
                android:textColor="#fff"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单价"
                android:layout_centerVertical="true"
                android:textColor="#fff"/>
            <EditText
                android:id="@+id/start_deal_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="请输入商品单价"
                android:gravity="right"
                android:inputType="date"
                android:textSize="14sp"
                android:maxLength="6"
                android:background="@color/colorPrimary"
                android:textColorHint="#999999"
                android:textColor="#fff"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单个手续费"
                android:layout_centerVertical="true"
                android:textColor="#fff"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.05个/元"
                android:textSize="14sp"
                android:background="@color/colorPrimary"
                android:textColor="#fff"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="过期时间"
                android:layout_centerVertical="true"
                android:textColor="#fff"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="请输入交易过期时间30-120分钟"
                android:textColorHint="#999999"
                android:gravity="right"
                android:textSize="14sp"
                android:background="@color/colorPrimary"
                android:textColor="#fff"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/colorPrimaryDark"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="买方"
                android:layout_centerVertical="true"
                android:textColor="#fff"/>
            <EditText
                android:id="@+id/start_deal_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="请输入买方昵称"
                android:textColorHint="#999999"
                android:gravity="right"
                android:textSize="14sp"
                android:background="@color/colorPrimary"
                android:textColor="#fff"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="买方真实姓名"
                android:layout_centerVertical="true"
                android:textColor="#fff"/>
            <EditText
                android:id="@+id/start_deal_real_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="请输入买方真实姓名"
                android:textColorHint="#999999"
                android:textSize="14sp"
                android:gravity="right"
                android:background="@color/colorPrimary"
                android:textColor="#fff"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="付款支付宝"
                android:layout_centerVertical="true"
                android:textColor="#fff"/>
            <EditText
                android:id="@+id/start_deal_buy_alipay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="请输入支付宝账号"
                android:textColorHint="#999999"
                android:textSize="14sp"
                android:gravity="right"
                android:inputType="number"
                android:background="@color/colorPrimary"
                android:textColor="#fff"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

    </LinearLayout>


    <Button
        android:id="@+id/start_deal_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="确认订单"
        android:textColor="#fff"
        android:background="@drawable/shape_lbtn"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>