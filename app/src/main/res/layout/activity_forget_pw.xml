<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    tools:context=".beforelogin.ForgetPwActivity">

    <include layout="@layout/title_style"/>

    <EditText
        android:id="@+id/register_forget_edit_tel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:inputType="number"
        android:layout_marginBottom="1dp"
        android:background="@drawable/shape_edit"
        android:textColor="#fff"
        android:textColorHint="#aaaaaa"
        android:hint="请输入手机号" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:layout_marginBottom="1dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/register_forget_edit_tel_code"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_marginRight="15dp"
            android:layout_height="50dp"
            android:paddingLeft="20dp"
            android:inputType="number"
            android:layout_marginBottom="1dp"
            android:background="@drawable/shape_edit"
            android:textColor="#fff"
            android:textColorHint="#aaaaaa"
            android:hint="请输入验证码" />
        <Button
            android:id="@+id/forget_pw_btn_tcode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:textColor="#FBE301"
            android:background="@drawable/shape_edit"
            android:text="获取验证码"/>
    </LinearLayout>
    <EditText
        android:id="@+id/register_forget_edit_pw"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="20dp"
        android:background="@drawable/shape_edit"
        android:textColor="#fff"
        android:inputType="textPassword"
        android:layout_marginBottom="1dp"
        android:textColorHint="#aaaaaa"
        android:hint="请输入新密码" />
    <EditText
        android:id="@+id/register_forget_edit_pwto"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="20dp"
        android:inputType="textPassword"
        android:background="@drawable/shape_edit"
        android:textColor="#fff"
        android:textColorHint="#aaaaaa"
        android:hint="请确认新密码" />

</LinearLayout>