<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#272A43">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:orientation="horizontal">
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
           android:background="@drawable/deal"
           >
           <LinearLayout
               android:id="@+id/buy_btn"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
               <TextView
                   android:id="@+id/buy_text"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="买入订单"
                   android:textSize="19sp"/>
           </LinearLayout>
           <LinearLayout
               android:id="@+id/sale_btn"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_toRightOf="@+id/buy_btn">
               <TextView
                   android:id="@+id/sale_text"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="卖出订单"
                   android:textSize="19sp"/>
           </LinearLayout>
       </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">
        <TextView
            android:id="@+id/select_all"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="全 部"
            android:textSize="19sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginLeft="18dp"/>
        <TextView
            android:id="@+id/select_waitpay"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="待付款"
            android:textSize="19sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginRight="6dp"/>
        <TextView
            android:id="@+id/select_payed"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="已付款"
            android:textSize="19sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginRight="6dp"/>
        <TextView
            android:id="@+id/select_finish"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="已完成"
            android:textSize="19sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginRight="6dp"/>
        <TextView
            android:id="@+id/select_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="已取消"
            android:textSize="19sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginRight="6dp"/>
        <TextView
            android:id="@+id/select_Appealing"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="申诉中"
            android:textSize="19sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginRight="6dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="2dp"/>

    <FrameLayout
        android:id="@+id/buy_sale_Fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>
</LinearLayout>