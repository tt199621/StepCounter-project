<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#23263B"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#272A43">
        <include layout="@layout/title_style" />

        <android.support.design.widget.TabLayout
            android:id="@+id/task_tablayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tabPadding="10dp"
            app:tabSelectedTextColor="#FBE301"
            app:tabTextColor="#ffffff"
            app:tabMinWidth="100dp"
            android:layout_gravity="center"
            app:tabGravity="center"
            app:tabIndicatorColor="#FBE301"

            app:tabBackground="@color/dblue"
            ></android.support.design.widget.TabLayout>
        <!--app:tabIndicatorFullWidth="false"-->
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前活跃度  0"
            android:textColor="#fff"    />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总人参果  0"
            android:textColor="#fff"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总步数  0"
            android:textColor="#fff"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/task_recyclerview"
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>



</LinearLayout>