<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <include layout="@layout/title_style"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/step_1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/step_over"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_marginLeft="30dp"
            android:textColor="@android:color/white"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="认证支付"
            android:textColor="@color/gray"
            android:layout_below="@+id/step_1"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"/>
        <TextView
            android:id="@+id/step_2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/step_over"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实名认证"
            android:textColor="@color/gray"
            android:layout_below="@+id/step_1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:id="@+id/step_3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/step_over"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:layout_alignParentRight="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="认证完成"
            android:textColor="@color/white"
            android:layout_below="@+id/step_1"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>


    <ImageView
        android:id="@+id/hintIv"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:src="@drawable/verificationsuccess" />

    <TextView
        android:id="@+id/verificationTip"
        android:layout_marginTop="-10dp"
        android:text="认证成功"
        android:textSize="18dp"
        android:layout_gravity="center"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"  />

    <Button
        android:id="@+id/retry"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:text="再次体验"
        android:textSize="15dp"
        android:background="#3f75fb"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
